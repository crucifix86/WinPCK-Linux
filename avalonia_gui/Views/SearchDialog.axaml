<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="WinPCK.Avalonia.Views.SearchDialog"
        Title="Search Files"
        Width="400" Height="120"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <StackPanel Margin="15" Spacing="10">
        <TextBlock Text="Enter search text:" FontWeight="Bold"/>
        <TextBox x:Name="SearchTextBox" Watermark="Search for files..." />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Search" Click="OnSearchClick" IsDefault="True" Width="80"/>
            <Button Content="Cancel" Click="OnCancelClick" IsCancel="True" Width="80"/>
        </StackPanel>
    </StackPanel>
</Window>
